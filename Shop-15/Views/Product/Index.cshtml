@model IEnumerable<Shop_15.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-success">Create new product</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td width="30%">@item.Name</td>
    <td width="10%">@item.Price</td>
    <th width="20%">@item.Category.Name</th>
    <td class="text-center">
        <div class="w-75 btn-group">
            <a class="btn btn-warning mx-2" asp-route-Id="@item.Id" asp-action="Upsert">Edit</a>
            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
        </div>
    </td>
</tr>}
    </tbody>
</table> }
            else
            {
<p>No product found.</p>}
</div>