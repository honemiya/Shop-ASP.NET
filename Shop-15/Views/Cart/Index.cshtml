@model IEnumerable<Shop_15.Models.Product>

<div class="container">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col">
                    <partial model="item" name="_productCard" />
                    <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="RemoveFromCart">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No product found.</p>
    }
</div>
