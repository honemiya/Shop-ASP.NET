@model Shop_15.Models.ViewsModels.CartVM

@for (int i = 0; i > Model.ProductList.Count(); ++i)
{
    <p>@Model.ProductList[i].Name</p>
}

<div class="row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.Name"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.Surname"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.Surname" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.Surname"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.Age"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.Age" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.Age"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.Gender"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.Gender" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.Gender"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.Country"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.Country" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.Country"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.AppUser.City"></label>
            </div>
            <div class="col-8">
                <input disabled asp-for="@Model.AppUser.City" class="form-control" />
                <span class="text-danger" asp-validation-for="@Model.AppUser.City"></span>
            </div>
        </div>
    </div>
</div>