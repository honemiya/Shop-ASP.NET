@model IEnumerable<Shop_15.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<main>
    <div class="container">
        <aside>
            <h1>Filter</h1>
            <div>
                <p>
                    Category
                </p>
                <ul class="fa-ul">
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                </ul>
            </div>
            <div class="item_4">
                <p>
                    Product
                </p>
                <ul class="fa-ul">
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                    <li><span class="fa-li"><i class="far fa-square"></i></span><a href="#">Temp</a></li>
                </ul>
            </div>
        </aside>
        <aside class="item_5">
            @if (Model.Count() > 0)
            {
                <table>
                    <colgroup>
                        <col class="col-1">
                        <col class="col-2">
                        <col class="col-3">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td width="50%"><span>@item.Name</span><br /><br /></td>
                            <td width="10%"><span>@item.Price</span><br /><br /></td>
                            <td width="30%"><span>@item.Category.Name</span><br /><br /></td>
                            <td><a href="#" class="s">Buy</a><br><span class="v"><a href="#">Flight Details</a></span></td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No category found</p>
            }
        </aside>
    </div>
</main>
